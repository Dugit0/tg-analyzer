<!DOCTYPE html>
<html>
<head>
    <title>{{ text.title }}: @{{ metadata.login }}</title>
    <link rel="stylesheet" type="text/css" href="{{ files_dir }}/style.css">
</head>
<body>
    <h1 class="header">{{ text.title }}</h1>
    <ul>
        <li>
            {{ text.user }}:
            <a href="https://t.me/{{ metadata.login }}"> <em>@{{ metadata.login }}</em> </a>
        </li>
    </ul>
    {% for chat, chatdata in chatstat.items() %}
    <div class="chatblock">
        <h2 class="chatname">Chat ID #{{ chat }}</h2>
        {% for feat, featdata in chatdata.items() %}
        <hr class="featsep">
        <h3 class="featurename">{{ feat }}</h3>
            {% for type, res in featdata.items() %}
        <h4 class="typename">{{ type }}</h4>
                {% if res is number %}
        <h1>{{ res|round(3) }}</h1>
                {% else %}
        <img class="plot" src="{{ files_dir }}/{{ res }}">
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
    {% else %}
    <p> <em>{{ text.empty_list }}</em>
    {% endfor %}
    <p align="right"> <a href="#">{{ text.to_top }}</a>
</body>
</html>
