<!DOCTYPE html>
<html>
<head>
    <title>{{ text.title }}: @{{ login }}</title>
</head>
<body>
    <h1>{{ text.title }}</h1>
    <p>{{ text.user }}:
    <a href="https://t.me/{{ login }}">
        <em>@{{ login }}</em>
    </a>
    {% for feature, img in features.items() %}
    <p> <h3>{{ feature }}</h3> <img src={{ img }}>
    {% else %}
    <p> <em>{{ text.empty_list }}</em>
    {% endfor %}
</body>
</html>
